NAME	= a.out
# **************************************************************************** #
CC		= g++
# CC		= g++-11

CFLAG	= -Wall -Wextra -Werror -std=c++98 -pedantic

SRC		= 	Main.cpp \
			class.Iphone.cpp

OBJ		= $(SRC:.cpp=.o)

RM		= rm -f

# **************************************************************************** #
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAG) $^ -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

r:
	@./$(NAME)
	
# **************************************************************************** #