NAME	= a.out
# **************************************************************************** #
CC		= g++
CFLAG	= -Wall -Wextra -Werror

SRC		= 	Main.cpp \
			class.Person_A.cpp
OBJ		= $(SRC:.cpp=.o)

RM		= rm -f

# **************************************************************************** #
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAG) $(OBJPATH)$^ -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

r:
	@./$(NAME)
	
# **************************************************************************** #